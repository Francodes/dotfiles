{
  "coc.preferences.formatOnSaveFiletypes": ["ruby", "eruby", "javascript", "typescriptreact"],
  "languageserver": {
    "sorbet": {
      "command": "srb",
      "args": [
        "tc",
        "--typed",
        "true",
        "--enable-all-experimental-lsp-features",
        "--lsp",
        "--disable-watchman",
        "--dir",
        "."
      ],
      "filetypes": [],
      "rootPatterns": ["sorbet/config"],
      "initializationOptions": {},
      "settings": {}
    },
    "solargraph": {
      "command": "solargraph",
      "args": ["stdio"],
      "filetypes": ["ruby"]
    },
    "rubocop": {
      "command": "rubocop-lsp",
      "args": [],
      "filetypes": ["ruby"]
    }
  }
}
