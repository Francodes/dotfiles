# Enable Bash like keyboard commands
HISTSIZE=10000
SAVEHIST=10000
HISTFILE=~/.zsh_history
bindkey -v
bindkey "^R" history-incremental-pattern-search-backward

# Load direnv
eval "$(direnv hook zsh)"

# Alias VIM and attach TMUX if exists
export EDITOR=vim

alias vim="nvim"

if [ $SSH_CLIENT ] && [ ! $TMUX  ]; then
  tmux attach || tmux
fi
