[user]
  name  = Francisco Marcano
  email = francisco.marcano@shopify.com

[credential]
  helper = osxkeychain

[alias]
  a    = add
  all  = add -A
  st   = status -sb
  ci   = commit -m
  ca   = commit --amend
  br   = branch
  bd   = branch -D
  co   = checkout
  cb   = checkout -b
  d    = diff
  dfc  = diff --cached
  l    = log --pretty=format:'%C(yellow)%h%Creset %Cgreen(%><(12)%cr%><|(12))%Creset - %s %C(blue)<%an>%Creset'
  pl   = pull
  ps   = push
  psf  = push --force-with-lease
  undo = reset --soft HEAD^
  f    = fetch
  sta  = stash
  stap = stash apply
  uall = reset .
  rbm  = pull --rebase origin master
  rbc  = rebase --continue
  rbs  = rebase --skip
  rba  = rebase --abort
  cln  = !git branch | grep -v 'master' | xargs git branch -D

[color]
  diff   = auto
  status = auto
  branch = auto
  ui     = true

[core]
  excludesfile = ~/.global_gitignore
  editor       = vim
  whitespace   = cr-at-eol

[apply]
  whitespace = nowarn

[mergetool]
  keepBackup = false

[difftool]
  prompt = false

[help]
  autocorrect = 1

[pull]
  default = current

[push]
  default = current

[diff]
  colorMoved = default

[rebase]
  autosquash = true
