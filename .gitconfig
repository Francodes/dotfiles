[user]
  name  = Nikola Đuza
  email = nikolaseap@gmail.com

[credential]
  helper = GIT_CREDENTIAL_HELPER

[alias]
  a    = add
  all  = add -A
  st   = status -sb
  ci   = commit -m
  ca   = commit --amend
  br   = branch
  bd   = branch -D
  co   = checkout
  cb   = checkout -b
  df   = diff
  dfc  = diff --cached
  lg   = log --pretty=format:'%C(yellow)%h%Creset %Cgreen(%><(12)%cr%><|(12))%Creset - %s %C(blue)<%an>%Creset'
  pl   = pull
  ps   = push
  f    = fetch
  undo = reset --soft HEAD^
  sta  = stash
  stap = stash apply
  uall = reset .
  sync = !git pull origin master && git push nikolalsvk master
  change-commits = "!f() { VAR=$1; OLD=$2; NEW=$3; shift 3; git filter-branch --env-filter \"if [[ \\\"$`echo $VAR`\\\" = '$OLD' ]]; then export $VAR='$NEW'; fi\" $@; }; f "

[color]
  diff   = auto
  status = auto
  branch = auto
  ui     = true

[core]
  excludesfile = ~/.gitignore
  editor       = vim

[apply]
  whitespace = nowarn

[mergetool]
  keepBackup = false

[difftool]
  prompt = false

[help]
  autocorrect = 1

[pull]
  default = current

[push]
  default = current

[commit]
  gpgsign = true
